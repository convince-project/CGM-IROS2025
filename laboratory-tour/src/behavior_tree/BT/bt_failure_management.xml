<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BatteryManagement">
        <ReactiveSequence>
            <ReactiveFallback>
                <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="BatteryLevel" nodeName=""/>
                <ReactiveFallback name="">
                    <ReactiveSequence>
                        <Inverter name="">
                            <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="BatteryCharging" nodeName=""/>
                        </Inverter>
                        <Parallel failure_threshold="1" success_threshold="2">
                            <ReactiveFallback>
                                <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="IsAtChargingStation" nodeName=""/>
                                <Sequence name="">
                                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="SayBye" nodeName=""/>
                                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="ResetTour" nodeName=""/>
                                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="GoToChargingStation" nodeName=""/>
                                </Sequence>
                            </ReactiveFallback>
                            <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="AlarmBatteryLow" nodeName=""/>
                        </Parallel>
                    </ReactiveSequence>
                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="Wait" nodeName=""/>
                </ReactiveFallback>
            </ReactiveFallback>
            <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="NotifyCharged" nodeName=""/>
            <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="IsAllowedToMove" nodeName=""/>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <SubTree ID="NetworkManagement"/>
            <Sequence>
                <SubTree ID="BatteryManagement"/>
                <SubTree ID="GoToPoi"/>
                <SubTree ID="CheckArtworkAndExplain"/>
            </Sequence>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="CheckArtworkAndExplain">
        <Sequence>
            <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="NarratePoi" nodeName=""/>
            <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="Dialog" nodeName=""/>
            <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="UpdatePoi" nodeName=""/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="GoToPoi">
        <ReactiveFallback>
            <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="IsAtCurrentPoi" nodeName=""/>
            <ReactiveSequence>
                <ReactiveFallback name="">
                    <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="CheckIfStart" nodeName=""/>
                    <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="VisitorsFollowingRobot" nodeName=""/>
                    <ReactiveSequence>
                        <ReactiveFallback name="">
                            <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="IsCheckingForPeople" nodeName=""/>
                            <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="StopAndTurnBack" nodeName=""/>
                        </ReactiveFallback>
                        <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="RunTimer" nodeName=""/>
                        <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="SayFollowMe" nodeName=""/>
                        <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="Wait" nodeName=""/>
                    </ReactiveSequence>
                </ReactiveFallback>
                <Parallel failure_threshold="1" success_threshold="2">
                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="GoToCurrentPoi" nodeName=""/>
                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="SayWhileNavigating" nodeName=""/>
                </Parallel>
            </ReactiveSequence>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="NetworkManagement">
        <ReactiveFallback>
            <Inverter>
                <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="NetworkStatusChanged" nodeName=""/>
            </Inverter>
            <ReactiveFallback>
                <ReactiveSequence>
                    <Condition ID="ROS2Condition" interface="ROS2SERVICE" isMonitored="false" name="NetworkUp" nodeName=""/>
                    <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="StopService" nodeName=""/>
                </ReactiveSequence>
                <Action ID="ROS2Action" interface="ROS2SERVICE" isMonitored="false" name="StartService" nodeName=""/>
            </ReactiveFallback>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <SubTree ID="BatteryManagement"/>
        <SubTree ID="CheckArtworkAndExplain"/>
        <SubTree ID="GoToPoi"/>
        <SubTree ID="NetworkManagement"/>
        <Action ID="ROS2Action">
            <input_port default="ROS2SERVICE" name="interface"/>
            <input_port default="false" name="isMonitored"/>
            <input_port name="nodeName"/>
        </Action>
        <Condition ID="ROS2Condition">
            <input_port default="ROS2SERVICE" name="interface"/>
            <input_port default="false" name="isMonitored"/>
            <input_port name="nodeName"/>
        </Condition>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
